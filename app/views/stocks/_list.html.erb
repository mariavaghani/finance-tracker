<div class="row">
  <div class="col-9">
    <table class="table table-primary table-striped table-hover table-bordered mt-5">
      <thead>
        <tr>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
        <tr>
          <th scope="row"><%= stock.ticker.upcase %></th>
          <td><%= stock.name %></td>
          <td><%= Stock.new_lookup(stock.ticker).last_price %></td>
          <td>
            <%= link_to "Remove", user_stock_path(stock), method: :delete,
                data: { confirm: "You want to stop tracking #{stock.ticker}?"},
                class: 'btn btn-sm btn-outline-warning' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
