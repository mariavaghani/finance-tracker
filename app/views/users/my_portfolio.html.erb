<h1>My Portfolio</h1>

<div class="search-area">
  <p>Search Stocks</p>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol",
        autofocus: true, class: "form-control form-control-lg no-round-right" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success no-round-left" do %>
          <%= fa_icon "angle-double-right 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% if @stock %>
  <div class="card card-header results-block mt-3">
    <strong>Symbol: </strong> <%= @stock.ticker %>
    <strong>Company: </strong> <%= @stock.name %>
    <strong>Latest Price: </strong> <%= @stock.last_price %>
  </div>
<% end %>
